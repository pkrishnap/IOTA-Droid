<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/background_activated">

    <CheckBox
        android:id="@+id/crimeListItemCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="4dp"
        android:enabled="false"
        android:focusable="false"  />

    <TextView
        android:id="@+id/crimeListItemTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/crimeListItemCheckbox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Crime Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/crimListItemDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crimeListItemTitleTextView"
        android:layout_toLeftOf="@+id/crimeListItemCheckbox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Crime Date" />

</RelativeLayout>
